<view class="container">
  <view class="cart-manage" bind:tap="onToggleStatus">{{status?'管理':'完成'}}</view>
  <view class="product-list">
    <van-checkbox-group value="{{result}}" bind:change="onListChange">
      <block wx:for="{{productList}}" wx:key="index">
        <van-checkbox value="{{checked}}" bind:click="onToggleItem" data-id="{{index}}" custom-class="product-item" label-class="product-info" name="{{item.id}}">
          <van-image width="100" height="100" src="https://img.yzcdn.cn/vant/cat.jpeg" />
          <view class="product-detail">
            <view class="product-price">¥100</view>
            <view class="product-price">x1</view>
          </view>
        </van-checkbox>
      </block>
    </van-checkbox-group>
  </view>
  <van-submit-bar wx:if="{{status}}" price="{{ totalPrice }}" disabled="{{ !productList.length }}" button-text="结算" bind:submit="onSubmit"></van-submit-bar>
  <van-submit-bar wx:if="{{!status}}" disabled="{{ !productList.length }}" button-text="删除" bind:submit="onSubmit"></van-submit-bar>
</view>
