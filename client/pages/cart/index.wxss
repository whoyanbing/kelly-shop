.container {
	background-color: #fafafa;
	width: 750rpx;
	padding-bottom: 100rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.cart-manage {
	width: 690rpx;
	height: 100rpx;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	font-size: 32rpx;
}

.product-list {
	width: 690rpx;
}

.product-item {
	margin: 0 0 20rpx;
}

.product-info {
	display: flex;
}

.product-detail {
	width: 380rpx;
	height: 80px;
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	font-size: 30rpx;
	padding-left: 50rpx;
}

.submit-bar {
	width: 750rpx;
	height: 200rpx;
}

.bottom-button {
	width: 160px;
	height: 40px;
}
